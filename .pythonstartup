#!/usr/bin/env python
# -*- coding: utf-8 -*-

def startup():
    import os

    HOME = os.environ['HOME']
    HISTORY_FILE = os.path.join(HOME, '.pythonhistory')
    
    def completion():
        try:
            import readline
        except ImportError:
            pass
        else:
            import rlcompleter
            import atexit
    
            # tab completion
            readline.parse_and_bind('tab: complete')
            
            # history file
            try:
                readline.read_history_file(HISTORY_FILE)
            except IOError:
                pass
            atexit.register(readline.write_history_file, HISTORY_FILE)
    
    completion()


startup()
del startup

# vim: ft=python
