#!/usr/bin/env python
# -*- coding: utf-8 -*-
import readline
import rlcompleter
import atexit
import os

# tab completion
readline.parse_and_bind('tab: complete')

# history file
histfile = os.path.join(os.environ['HOME'], '.pythonhistory')
try:
    readline.read_history_file(histfile)
except IOError:
    pass

atexit.register(readline.write_history_file, histfile)

# cleanup
for v in globals().values():
    del v

# vim: ft=python
